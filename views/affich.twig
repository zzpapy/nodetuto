{% extends 'layout.twig' %}
{% block body %}
<form action="/update" method="post">
    <div class="form-group">
        <label>Name:</label>
        <input type="text" class="form-control" name="name" value="{{ name }}" autocomplete="off">
    </div>
    <div class="form-group">
        <label>Address:</label>
        <pre>
            {{ dump(name) }}
        </pre>
        <input type="hidden" class="form-control" name="id" value="{{ id }}" autocomplete="off">
        <input type="text" class="form-control" name="address" value="{{ address }}" autocomplete="off">
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-info" value="Add"/>
    </div>
</form>
{% endblock %}